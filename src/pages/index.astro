---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Logo from "../components/Logo.astro";
import { getCollection } from 'astro:content';

const collection = await getCollection('landing');
---

<Layout title="Welcome to AJBC Services.">
	<main>
		<Logo image="/ajbc_blue.png"/>
		
		<div class="flex flex-col justify-center">
			<ul
				role="list"
				class="grid grid-cols-1 md:grid-cols-2 justify-between mx-auto mb-24"
			>
				{
					collection.map((item) => (
						<Card
							href={item.data.href}
							title={item.data.title}
							body={item.body}
						/>
					))
				}
			</ul>
		</div>
	</main>

	<script>
		const elements = [
			".box",
			".logo-img",
			"#INTRO",
			"#WORK",
			"#ABOUT",
			"#CONTACT",
		];

		gsap.from(elements, {
			opacity: 0,
			duration: 0.2,
			delay: (i) => i * 0.2,
			y: -30,
		});
	</script>
	<style></style>
</Layout>
